<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.xiaoxingqi.gmdoc">

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.game.GameDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.game.GameListActicivty"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.global.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".modul.home.UserHomeActivity" />
        <activity
            android:name=".modul.common.ShowPicActivity"
            android:theme="@style/translucentTheme" />
        <activity
            android:name=".modul.login.LoginActivity"
            android:theme="@style/translucentTheme" />
        <activity android:name=".modul.dynamic.DynamicDetailsActivity" />


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>